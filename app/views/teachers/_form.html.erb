<%= form_for(@teacher, html: {class: 'form-horizontal'}) do |f| %>

<%= render partial: "layouts/errors", locals: { object: @teacher } %>

  <div class="field form-group">
    <%= f.label :name, "Name:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
  </div>

  <div class="field form-group">
    <%= f.label :email, "Email:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.email_field :email, class: 'form-control' %>
  </div>
</div>

  <div class="field form-group">
    <%= f.label :password, "Password:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control' %>
  </div>
</div>

  <div class="field form-group">
    <%= f.label :subject, "Subject:", class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :subject, class: 'form-control' %>
  </div>
</div>

  <h4>Classroom information:</h4>

    <%= f.fields_for :classroom do |classroom_form| %>

  <div class="field form-group">
      <%= classroom_form.label :name, "Name:", class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= classroom_form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
      <%= classroom_form.label :location, "Location:", class: 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= classroom_form.text_field :location, class: 'form-control' %>
    </div>
  </div>

    <% end %>

  <%= f.submit %>

<% end %>
